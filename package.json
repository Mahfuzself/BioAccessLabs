{
  "name": "bioaccesslabs",
  "version": "2.0.0",
  "description": "Enterprise Playwright Test Automation Framework - Zero Duplication",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:smoke": "playwright test --grep @smoke",
    "test:sanity": "playwright test --grep @sanity",
    "test:regression": "playwright test --grep @regression",
    "test:e2e": "playwright test --grep @e2e",
    "test:critical": "playwright test --grep @critical",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:qa": "TEST_ENV=qa playwright test",
    "test:staging": "TEST_ENV=staging playwright test",
    "test:prod": "TEST_ENV=prod playwright test --grep @smoke",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "test:shard1": "SHARD=1/3 playwright test",
    "test:shard2": "SHARD=2/3 playwright test",
    "test:shard3": "SHARD=3/3 playwright test",
    "report": "playwright show-report reports/html-report",
    "report:open": "playwright show-report reports/html-report",
    "allure:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "allure:open": "allure open reports/allure-report",
    "allure:serve": "allure serve reports/allure-results",
    "clean": "rm -rf test-results reports screenshots logs .auth",
    "clean:reports": "rm -rf reports",
    "clean:screenshots": "rm -rf screenshots",
    "clean:auth": "rm -rf .auth",
    "install:browsers": "playwright install --with-deps",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "playwright",
    "test-automation",
    "e2e-testing",
    "typescript",
    "page-object-model",
    "zero-duplication"
  ],
  "author": "BioAccess Labs QA Team",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "allure-commandline": "^2.32.1",
    "allure-playwright": "^3.2.4",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^2.1.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
